#
# Rakefile
# Based on the JekyllBootstrap 
# 
#
require "rubygems"
require "rake"
require "yaml"
require "time"

SOURCE = "."
CONFIG = {
	'layouts' => File.join(SOURCE, "_layouts"),
	'posts' => File.join(SOURCE, "blog", "_posts"),
	'post_ext' => "md"
}


desc "Create a new post in #{CONFIG['posts']}"
task :post do
	abort("rake aborted: directory not found") unless FileTest.directory?(CONFIG['posts'])
	title = ENV['title'] || ""
	if title.length == 0 
		title = ask("=> Title of Blog post: ")
	end
	
	slug = title.downcase.strip.gsub(' ', '-').gsub(/[^\w-]/, '')
	
	begin
		date = (ENV['date'] ? Time.parse(ENV['date']) : Time.now).strftime("%Y-%m-%d")
	rescue Exception => e
		puts "Error: date format is incorrect"
		exit -1
	end

	filename = File.join(CONFIG['posts'], "#{date}-#{slug}.#{CONFIG['post_ext']}")
	
	if File.exist?(filename)
		puts "#{filename} already exists"
		exit -1
	end

	puts "=> Create new post: #{filename}"
	open(filename, 'w') do |post|
		post.puts "---"
		post.puts "layout: post"
		post.puts "title: \"#{title.gsub(/-/, " ")}\""
		post.puts "---"
	end
	puts "=> Compiling the site.."
	output = `jekyll`
	puts output
end

def ask(message)
	answer = get_stdin(message)
	answer
end

def get_stdin(message)
	print message
	STDIN.gets.chomp
end
